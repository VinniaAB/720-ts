{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
