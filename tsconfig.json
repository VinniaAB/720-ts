{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
