{
  "compilerOptions": {
    "module": "commonjs",
    "noEmit": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
